---
import Layout from '../layouts/Layout.astro';
import LoginForm from '../components/auth/LoginForm.astro';
import { redirectIfAuthenticated } from '../middleware/auth';

const authCheck = await redirectIfAuthenticated({ request: Astro.request });
if (authCheck.redirect) {
  return Astro.redirect(authCheck.url);
}
---

<Layout title="Login - Patient PSI">
  <main class="flex min-h-screen flex-col items-center justify-center py-12 sm:px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
      <h2 class="mt-6 text-center text-3xl font-bold tracking-tight">
        Sign in to your account
      </h2>
    </div>

    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
      <div class="bg-white px-4 py-8 shadow sm:rounded-lg sm:px-10 dark:bg-gray-800">
        <LoginForm client:load />
      </div>
    </div>
  </main>
</Layout>
