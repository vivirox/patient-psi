---
import Layout from '../layouts/Layout.astro';
import { getUserFromRequest } from '../lib/auth';
import { db } from '../lib/db';
import { patients, chats } from '../drizzle/schema';
import { eq } from 'drizzle-orm';

const userId = await getUserFromRequest(Astro.request);
if (!userId) {
  return Astro.redirect('/login');
}

const userPatients = await db
  .select()
  .from(patients)
  .where(eq(patients.userId, userId));

const recentChats = await db
  .select()
  .from(chats)
  .where(eq(chats.userId, userId))
  .orderBy(chats.updatedAt)
  .limit(5);
---

<Layout title="Dashboard - Patient PSI">
  <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="px-4 py-6 sm:px-0">
      <h1 class="text-3xl font-semibold text-gray-900 mb-8">Dashboard</h1>

      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
        <!-- Patient Stats -->
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <div class="flex items-center">
              <div class="flex-shrink-0 bg-indigo-500 rounded-md p-3">
                <svg
                  class="h-6 w-6 text-white"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                  />
                </svg>
              </div>
              <div class="ml-5 w-0 flex-1">
                <dl>
                  <dt class="text-sm font-medium text-gray-500 truncate">
                    Total Patients
                  </dt>
                  <dd class="text-3xl font-semibold text-gray-900">
                    {userPatients.length}
                  </dd>
                </dl>
              </div>
            </div>
          </div>
          <div class="bg-gray-50 px-5 py-3">
            <div class="text-sm">
              <a
                href="/patients"
                class="font-medium text-indigo-600 hover:text-indigo-900"
              >
                View all patients â†’
              </a>
            </div>
          </div>
        </div>

        <!-- Recent Activity -->
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <h3 class="text-lg leading-6 font-medium text-gray-900">
              Recent Chats
            </h3>
            <div class="mt-5 flow-root">
              <ul class="-my-4 divide-y divide-gray-200">
                {
                  recentChats.map((chat) => (
                    <li class="py-4">
                      <div class="flex items-center space-x-4">
                        <div class="flex-1 min-w-0">
                          <p class="text-sm font-medium text-gray-900 truncate">
                            {chat.title}
                          </p>
                          <p class="text-sm text-gray-500">
                            Updated {new Date(chat.updatedAt).toLocaleDateString()}
                          </p>
                        </div>
                        <div>
                          <a
                            href={`/patients/${chat.patientId}/chats/${chat.id}`}
                            class="inline-flex items-center shadow-sm px-2.5 py-0.5 border border-gray-300 text-sm leading-5 font-medium rounded-full text-gray-700 bg-white hover:bg-gray-50"
                          >
                            View
                          </a>
                        </div>
                      </div>
                    </li>
                  ))
                }
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
