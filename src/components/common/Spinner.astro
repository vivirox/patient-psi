---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div
  class:list={[
    'inline-flex items-center justify-center w-4 h-4 animate-spin rounded-full border-2 border-gray-300 border-t-transparent',
    className
  ]}
  role="status"
  aria-label="loading"
>
  <span class="sr-only">Loading...</span>
</div>
